<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/user_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify User Info" />

        <Button
            android:id="@+id/account_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bind Unbind Phone Number" />

        <Button
            android:id="@+id/setPhonePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Phone Password" />

        <Button
            android:id="@+id/setEmailPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Email Password" />


        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout" />

        <Button
            android:id="@+id/logoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logoff" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>